<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema">  
  <xsd:import namespace="http://www.w3.org/2001/XMLSchema"/>  
  <xsd:element name="Lens" type="Lens"> 
    <xsd:unique name="Lens"> 
      <xsd:selector xpath="."/>  
      <xsd:field xpath="ID"/> 
    </xsd:unique> 
  </xsd:element>  
  <xsd:complexType name="Lens"> 
    <xsd:all> 
      <xsd:element maxOccurs="1" minOccurs="1" name="ID" type="AUTO_INCREMENT"/>  
      <xsd:element maxOccurs="1" minOccurs="1" name="LensName" type="xsd:string"/>  
      <xsd:element maxOccurs="1" minOccurs="0" name="Vendor" type="xsd:string"/>  
      <xsd:element maxOccurs="1" minOccurs="0" name="ReleaseYear" type="xsd:integer"/>  
      <xsd:element maxOccurs="1" minOccurs="0" name="LensCategory" type="xsd:string"/>  
      <xsd:element maxOccurs="1" minOccurs="0" name="MinFocalLength" type="xsd:integer"/>  
      <xsd:element maxOccurs="1" minOccurs="0" name="MaxFocalLength" type="xsd:integer"/>  
      <xsd:element maxOccurs="1" minOccurs="0" name="MinAperture" type="xsd:double"/>  
      <xsd:element maxOccurs="1" minOccurs="0" name="MaxAperture" type="xsd:double"/>  
      <xsd:element maxOccurs="1" minOccurs="0" name="MinFocusDistanceMM" type="xsd:integer"/>  
      <xsd:element maxOccurs="1" minOccurs="0" name="FilterSizeMM" type="xsd:integer"/> 
    </xsd:all> 
  </xsd:complexType>  
  <xsd:simpleType name="AUTO_INCREMENT"> 
    <xsd:restriction base="xsd:integer"> 
      <xsd:pattern value="[\-+]?[0-9]+"/> 
    </xsd:restriction> 
  </xsd:simpleType> 
</xsd:schema>
